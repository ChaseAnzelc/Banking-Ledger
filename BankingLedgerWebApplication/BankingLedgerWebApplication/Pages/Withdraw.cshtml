@page
@model BankingLedgerWebApplication.WithdrawModel

@{
    ViewData["Title"] = "Withdraw";
    Session session;
    session = Program.getSession();
    string currentAccount = session.currentAccount;
    TempData["currentaccount"] = TempData["currentaccount"];
    string curacct = (string)TempData["curacct"];
}

<br />
<br />
<h2>Withdraw From Your @currentAccount</h2>
<br />
<br />
<form action="" method="post">
    <fieldset>
        <div class="form-group">
            <label for="description">Withdraw Description</label>
            <input type="text" class="form-control" name="description" placeholder="Enter description">
        </div>
        <div class="form-group">
            <label for="amount">Withdraw Amount</label>
            <input type="text" class="form-control" name="amount" placeholder="Enter amount">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
</form>

@{ if (curacct == "Changed")
    {
        Response.Redirect("/CheckBalance");
    }
}